import java.util.Scanner;

public class project {
    public static void main(String[] args) {
        int n,m=0;
        int total = 0;

        Scanner inp = new Scanner(System.in);

        do {
            System.out.print("Sayiyi giriniz :");
            n = inp.nextInt();
            if (n % 4 ==0){
                total += n;
            }

        } while (n % 2 == 0);

        System.out.println(total);
    }
}
